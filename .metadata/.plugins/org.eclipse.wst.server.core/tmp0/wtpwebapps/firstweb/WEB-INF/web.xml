<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>firstweb</display-name>

	<listener>
	<listener-class>com.scopes.ServletListener</listener-class>
	</listener>

	<filter>
	<filter-name>filterservlet</filter-name>
	<filter-class>com.scopes.FilterServlet</filter-class>
	</filter>
	<filter-mapping>
	<filter-name>filterservlet</filter-name>
	<url-pattern>/fir</url-pattern>
	</filter-mapping>

  <servlet>
  <servlet-name>first</servlet-name>
  <servlet-class>com.dynamic.FirstServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>second</servlet-name>
  <servlet-class>com.dynamic.SecondServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>third</servlet-name>
  <servlet-class>com.dynamic.ThirdServlet</servlet-class>
  </servlet>
  <!--  
  <servlet>
  <servlet-name>forward</servlet-name>
  <servlet-class>com.dynamic.ForwardAnnotation</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>header</servlet-name>
  <servlet-class>com.dynamic.HeaderAnnotation</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>footer</servlet-name>
  <servlet-class>com.dynamic.FooterAnnotation</servlet-class>
  </servlet>
  -->
  <servlet-mapping>
  <servlet-name>first</servlet-name>
  <url-pattern>/fir</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>second</servlet-name>
  <url-pattern>/sec</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>third</servlet-name>
  <url-pattern>/third</url-pattern>
  </servlet-mapping>
  <!--  
  <servlet-mapping>
  <servlet-name>forward</servlet-name>
  <url-pattern>/forward</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>footer</servlet-name>
  <url-pattern>/footer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>header</servlet-name>
  <url-pattern>/header</url-pattern>
  </servlet-mapping>
  -->
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
  </welcome-file-list>
</web-app>